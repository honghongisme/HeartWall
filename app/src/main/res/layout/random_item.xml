<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_corner"
    android:layout_margin="10dp"
    android:id="@+id/container_fl">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:id="@+id/type_icon"
            android:src="@drawable/user_po"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_tv"
            android:text="测试用户"
            app:layout_constraintLeft_toRightOf="@id/type_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_tv"
            android:text="2000/2/23"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content_tv"
            android:text="hdiuwhdaiudwa"
            app:layout_constraintTop_toBottomOf="@id/name_tv"
            app:layout_constraintLeft_toLeftOf="@id/name_tv"
            android:layout_marginTop="20dp"
            android:inputType="textMultiLine"
            android:singleLine="false"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>